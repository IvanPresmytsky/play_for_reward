{
  "parser": "babel-eslint",
  "extends": [
    "airbnb-base"
  ],
  "plugins": [
    "babel",
    "react",
    "import",
    "jsx-a11y",
    "promise"
  ],
  "env": {
    "browser": true,
    "node": true
  },
  "globals": {
    "describe": false,
    "expect": false,
    "it": false,
    "__DEV__": false,
    "__TEST__": false,
    "__PROD__": false
  },
  "rules": {
    "key-spacing": 0,
    "jsx-quotes": [2, "prefer-double" ],
    "max-len": [2, 120, 2],
    "object-curly-spacing": [2, "always"],
    "react/jsx-uses-vars": [2],
    "no-unused-vars": [
      "error",
      {
        "varsIgnorePattern": "^React"
      }
    ],
    "no-underscore-dangle": 0,
    "class-methods-use-this": 0,
    "import/no-named-as-default": 0
  }
}